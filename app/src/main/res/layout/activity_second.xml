<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".lesson2.SecondActivity">

    <Button
        android:id="@+id/buttonFlat"
        android:layout_width="181dp"
        android:layout_height="48dp"
        android:layout_marginTop="96dp"
        android:onClick="snackbarShort"
        android:text="@string/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonFlatRound"
        android:layout_width="183dp"
        android:layout_height="48dp"
        android:layout_marginTop="27dp"
        android:onClick="snackbarLong"
        android:text="@string/buttonLong"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonFlat" />

    <Button
        android:id="@+id/buttonRaised"
        android:layout_width="183dp"
        android:layout_height="48dp"
        android:layout_marginTop="29dp"
        android:onClick="snackbarIndefinite"
        android:text="@string/buttonIndef"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonFlatRound" />

    <Button
        android:id="@+id/buttonRaisedRound"
        android:layout_width="183dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:onClick="snackbarAction"
        android:text="@string/buttonAction"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonRaised" />



</androidx.constraintlayout.widget.ConstraintLayout>