<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
    </style>

    <style name="AppThemeRed" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimaryRed</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkRed</item>
        <item name="colorAccent">@color/colorAccentRed</item>
        <!--        <item name="windowActionBar">false</item>-->
        <!--        <item name="windowNoTitle">true</item>-->
    </style>

    <style name="AppThemeYellow" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimaryYellow</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkYellow</item>
        <item name="colorAccent">@color/colorAccentYellow</item>
        <!--        <item name="windowActionBar">false</item>-->
        <!--        <item name="windowNoTitle">true</item>-->
    </style>

    <style name="AppThemeGreen" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimaryGreen</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkGreen</item>
        <item name="colorAccent">@color/colorAccentGreen</item>
        <!--        <item name="windowActionBar">false</item>-->
        <!--        <item name="windowNoTitle">true</item>-->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">

    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="BasicStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">72dp</item>
        <item name="android:backgroundTint">@color/primaryDarkColor</item>
        <item name="android:textColor">@android:color/holo_red_dark</item>
        <item name="android:textSize">20sp</item>

    </style>

    <style name="StyleOrange" parent="BasicStyle">
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:textColor">@android:color/holo_orange_dark</item>
    </style>

    <style name="StyleYellow" parent="BasicStyle">
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:textColor">@android:color/holo_orange_light</item>
    </style>

    <style name="StyleGreen" parent="BasicStyle">
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:textColor">@android:color/holo_green_dark</item>
    </style>

    <style name="StyleBlue" parent="BasicStyle">
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:textColor">@android:color/holo_blue_dark</item>
    </style>
</resources>